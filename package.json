    "name": "Vladimir K.S.",
    "email": "vlad@vladks.com",
    "url": "https://github.com/vladks"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladks/claude-context-manager.git"
  },
  "bugs": {
    "url": "https://github.com/vladks/claude-context-manager/issues"
  },
  "homepage": "https://github.com/vladks/claude-context-manager#readme",
  "funding": [
    {
      "type": "individual",
      "url": "https://buymeacoffee.com/vladks"
    },
    {
      "type": "individual",
      "url": "https://paypal.me/rimidalvks"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/vladks"
    }
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "bin": {
    "claude-context-manager": "./bin/claude-context-manager.js",
    "ccm": "./bin/claude-context-manager.js",
    "ai-log-start": "./scripts/logging/ai-log-start",
    "ai-log-progress": "./scripts/logging/ai-log-progress",
    "ai-log-end": "./scripts/logging/ai-log-end"
  },
  "files": [
    "bin/",
    "src/",
    ".claude/skills/managing-claude-context/",
    ".claude/skills/ccm-feedback/",
    ".claude/commands/",
    "ccm-claude-md-prefix/",
    "packages/",
    "scripts/",
    "archive-packages/",
    "README.md",
    "CLAUDE.md",
    "ARTIFACT_CATALOG.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "version:major": "node scripts/bump-version.js major",
    "version:minor": "node scripts/bump-version.js minor",
    "version:patch": "node scripts/bump-version.js patch",
    "changelog": "node scripts/generate-changelog.js",
    "docs": "jsdoc -c jsdoc.json",
    "prepare": "husky install",
    "prepublishOnly": "chmod +x bin/* scripts/logging/* scripts/background/*"
  },
  "dependencies": {
    "@inquirer/checkbox": "^3.0.1",
    "@inquirer/confirm": "^4.0.1",
    "@inquirer/select": "^3.0.1",
    "@inquirer/input": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "ora": "^5.4.1",
    "jest": "^30.2.0",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2"
  },
  "preferGlobal": true
}
